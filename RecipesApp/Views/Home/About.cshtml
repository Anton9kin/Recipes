@{
    ViewBag.Title = "Надины рецепты";
}


<div id="templatemo_top_dishes">


    @{
        bool show = false;

        foreach (var r in ViewBag.Recipes)
        {
            if (r.Id == ViewBag.Show)
            {
                show = true;
                string s = "../../Content/images/pic/" + r.Id + ".jpg";

                <h1>@r.Name</h1>
                <div class="recept">

                    <table>
                        <tr>
                            <td><img src=@s alt=@r.Name width="410" height="300"/></td>
                            <td>
                                <h2>Ингредиенты:</h2>
                                <ul>
                                    @{
                                        string str = r.Ingridient;
                                        string[] sIngrid = str.Split(';');

                                        foreach (string vs in sIngrid)
                                        {
                                            <li>@vs</li>
                                        }
                                    }
                                </ul>
                            </td>
                        </tr>
                    </table>

                    <h2>Способ приготовления:</h2>
                    <div class="prigotovlen">
                        @r.Cooking
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            }
        }

        if (show == false)
        {
            <h2>К сожалению блюдо не найдено</h2>
        }
    }


</div> <!-- end of top dishes -->
