@{
    ViewBag.Title = "Надины рецепты";
}

<div id="templatemo_top_dishes">


    @{
        foreach (var r in ViewBag.Recipes)
        {
            if (r.Id == ViewBag.Show)
            {
                <h1>@r.Name</h1>
                <div class="recept">
                    <!--        	  <img src="images/templatemo_image_01.jpg" alt="image" />  -->
                    <h2>Ингредиенты:</h2>
                    <ul>
                        <li>@r.Ingridient</li>
                    </ul>
                    <h2>Способ приготовления:</h2>
                    <div class="prigotovlen">
                        @r.Cooking
                    </div>
                </div>
                <div class="cleaner">&nbsp;</div>
            }
        }
    }


</div> <!-- end of top dishes -->
