@{
    ViewBag.Title = "Надины рецепты";
}


<div id="templatemo_top_dishes">

    @{
        if (ViewBag.Recipe.Id != 0)
        {
            string s = "../../Content/images/pic/" + ViewBag.Recipe.Id + ".jpg";

            <h1>@ViewBag.Recipe.Name</h1>
            <div class="recept">

                <table>
                    <tr>
                        <td width="200"><img src=@s alt=@ViewBag.Recipe.Name width="410" height="300"/></td>
                        <td>
                            <h2>Ингредиенты:</h2>
                            <ul>
                                @{
                                    string str = ViewBag.Recipe.Ingridient;
                                    string[] sIngrid = str.Split(';');

                                    foreach (string vs in sIngrid)
                                    {
                                        if (vs.Length > 2)
                                        {
                                            <li>@vs</li>
                                        }
                                    }
                                }
                            </ul>
                        </td>
                    </tr>
                </table>

                <h2>Способ приготовления:</h2>
                <div class="prigotovlen">
                    @ViewBag.Recipe.Cooking
                </div>
            </div>
            <div class="cleaner">&nbsp;</div>
        }
        else
        {
            <div class="recept">
                <h2>К сожалению блюдо не найдено</h2>
            </div>
        }
    }

</div> <!-- end of top dishes -->
